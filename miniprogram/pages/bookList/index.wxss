/* pages/userCenter/index.wxss */
.container {
  position: relative;
  padding: 0 0 200rpx;
  font-family: '微软雅黑';
}
.order-list{
  margin: 20rpx auto 0;
}
.order-item{
  display: block;
  width: 96%;
  overflow: hidden;
  margin: 20rpx auto 0;
  background-color: #FFF;
  border-radius: 12rpx;
  box-shadow: 0 0 2rpx rgba(0,0,0,0.3);
}
.order-item .top{
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #ec4b7d;
  line-height: 60rpx;
  color: #FFF;
}
.order-num{
  width: 50%;
  float: left;
  font-size: 24rpx;
}
.order-time{
  width: 50%;
  float: right;
  font-size: 20rpx;
  text-align: right;
}
.order-item .middle{
  position: relative;
  line-height: 50rpx;
  margin: 10rpx 20rpx;
  font-size: 26rpx;
}
.order-status-hook{
  position: absolute;
  top: 0;
  right: 0;
}
.strench-content{
  height: auto;
}
.show-hide{
  margin: 0 20rpx;
}
.hide-item{
  border-top: 1rpx solid #f4f4f4;
  padding: 10rpx 0;
}
.hidelabel-text{
  text-indent: 30rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: rgba(44, 127, 148, 0.7);
}
.toggle-button-zone{
  text-align: center;
  color: #939393;
  font-size: 22rpx;
}
.arrow-icon{
  margin: 0 auto;
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.order-item .bottom{
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx;
  border-top: 1rpx solid #f4f4f4;
}
.order-people{
  width: 60%;
  float: left;
  font-size: 26rpx;
}
.order-school{
  width: 40%;
  float: right;
  font-size: 20rpx;
  text-align: right;
}
.finish-bottom{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 20rpx;
  color: rgba(0,0,0,0.3);
}