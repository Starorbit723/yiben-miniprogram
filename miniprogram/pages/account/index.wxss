/* pages/account/index.wxss */
page {
  background-color: #ec4b7d;
}
.container {
  position: relative;
  width: 100%;
  height: 100vh;
}
.title{
  padding: 30rpx 0 0;
  text-align: center;
  font-weight: 700;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #FFF;
}
.form-content{
  margin: 60rpx auto 0;
  padding: 0 60rpx 0 60rpx;
}
.input-box{
  height: 70rpx;
  margin-bottom: 40rpx;
}
.input-box .label{
  width: 120rpx;
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  color: #FFF;
  font-weight: 700;
  font-size: 28rpx;
  margin-right: 30rpx;
}
.yb-input{
  float: left;
  display: block;
  width: 470rpx;
  height: 70rpx;
  line-height: 72rpx;
  background-color: #FFF;
  border-radius: 35rpx;
  text-align: center;
  font-size: 30rpx;
}
.yb-picker{
  float: left;
  display: block;
  padding: 0;
  text-align: center;
  width: 470rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FFF;
  border-radius: 35rpx;
  font-size: 30rpx;
}
.childrens{
  margin-top: 70rpx;
}

.btn-zone{
  display: block;
  height: 60rpx;
}
.add-btn{
  float: left;
  width: 300rpx;
  height: 60rpx;
}
.del-btn{
  float: right;
  width: 300rpx;
  height: 60rpx;
}
.ensure-btn{
  clear: both;
  margin: 90rpx auto 0;
  height: 80rpx;
}